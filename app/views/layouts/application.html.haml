%html

  = render 'layouts/navbar'

  %head
    %title
      Hipstagram

    = stylesheet_link_tag 'application'

    = javascript_include_tag 'application'

    = csrf_meta_tags


  %body
    .container
    -flash.each do |name, msg|
      = content_tag :div, msg, class: [:alert, alert_for(name)]
    = yield